{
    "args": ["/home/myworktree"],
    "kwargs": {
        "rebase": true
    },
    "facts": {
        "files.Directory": {
            "path=/home/myworktree": {
                "mode": 0
            }
        },
        "git.GitTrackingBranch" : {
            "repo=/home/myworktree": "origin/master"
        }
    },
    "commands": [
        "cd /home/myworktree && git pull --rebase"
    ],
    "idempotent": false
}
