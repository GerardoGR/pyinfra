{
    "args": ["/home/myworktree"],
    "kwargs": {
        "repo": "/home/mainrepo",
        "branch": "mybranch",
        "create_branch": true
    },
    "facts": {
        "files.Directory": {
            "path=/home/mainrepo": {},
            "path=/home/mainrepo/.git": {
                "mode": 0
            },
            "path=/home/myworktree": null
        }
    },
    "commands": [
        "cd /home/mainrepo && git worktree add -b mybranch /home/myworktree"
    ],
    "idempotent": false
}